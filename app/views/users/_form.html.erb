<div class="p-4 rounded-lg bg-white">
<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
  <div><%= form.label :email %></div>
  <div class="rounded border mb-2"><%= form.text_field :email, class: "w-full" %></div>
  </div>

  <div class="field">
    <div><%= form.label :password %></div>
    <div class="rounded border mb-2"><%= form.password_field :password, class: "w-full" %></div>
  </div>

  <div class="field">
    <div><%= form.label :password_confirmation %></div>
    <div class="rounded border mb-2"><%= form.password_field :password_confirmation, class: "w-full" %></div>
  </div>

  <div class="actions">
    <%= form.submit class: "bg-yellow-500 w-full py-1 rounded text-white cursor-pointer hover:bg-gray-600" %>
  </div>

<% end %>
</div>